#!/bin/bash
MECAB_VERSION=0.996
MECAB_DIR=/app/vendor/mecab

echo "-----> Installing MeCab"
curl -L "https://drive.google.com/uc?export=download&id=0B4y35FiV1wh7SDd1Q1dUQkZQaUU" -o mecab-${MECAB_VERSION}.tar.gz
tar xzf mecab-${MECAB_VERSION}.tar.gz
cd mecab-${MECAB_VERSION}
./configure --prefix=$MECAB_DIR --with-charset=utf8
make && make install

# Clear temporary files
cd ..
rm -rf mecab-${MECAB_VERSION} mecab-${MECAB_VERSION}.tar.gz

echo "-----> MeCab installation complete"
